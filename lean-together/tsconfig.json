{
  "exclude": ["dist", "node_modules"],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "target": "es2017",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "types": [
      "react",
      "react-dom",
      "jest",
      "puppeteer",
      "jest-environment-puppeteer",
      "expect-puppeteer"
    ]
  },
  "include": ["src/**/*"]
}
